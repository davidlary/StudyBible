# SICE v6.0 Environment Configuration Template
# Copy this file to .env and configure for your environment

# ============================================================================
# Music Library Configuration
# ============================================================================
SICE_LIBRARY_PATH=/Users/davidlary/Dropbox/Music/MyMusic
SICE_ARTIST_NAME=Trippen Aliens

# ============================================================================
# Database Configuration
# ============================================================================
SICE_DB_PATH=data/sice.duckdb
SICE_CACHE_DIR=.sice_cache

# ============================================================================
# Audio Processing
# ============================================================================
SICE_TARGET_SAMPLE_RATE=48000
SICE_NUM_WORKERS=8
SICE_BATCH_SIZE=100

# ============================================================================
# Analysis Thresholds
# ============================================================================
SICE_LUFS_TARGET=-14.0
SICE_TRUE_PEAK_MAX=-1.0
SICE_MIN_DURATION=10.0

# ============================================================================
# Output Configuration
# ============================================================================
SICE_OUTPUT_DIR=outputs
SICE_GENERATE_MARKDOWN=true
SICE_GENERATE_CSV=true
SICE_GENERATE_DISTROKIT_JSON=true
SICE_GENERATE_PLAYLISTS_YAML=true

# ============================================================================
# Logging
# ============================================================================
SICE_LOG_LEVEL=INFO
SICE_LOG_FORMAT=json

# ============================================================================
# Development
# ============================================================================
SICE_DEBUG=false
SICE_ENABLE_PROFILING=false
