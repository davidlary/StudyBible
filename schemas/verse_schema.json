{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Biblical Verse Exegesis Schema",
  "description": "Comprehensive schema for storing high-fidelity biblical exegesis data",
  "type": "object",
  "required": [
    "verse_id",
    "section_1_sacred_text",
    "section_2_exegetical_synthesis",
    "section_3_life_application"
  ],
  "properties": {
    "verse_id": {
      "type": "string",
      "pattern": "^[A-Z0-9]+-[0-9]+-[0-9]+$",
      "description": "Unique verse identifier in format BOOK-CH-VS"
    },
    "section_1_sacred_text": {
      "type": "object",
      "required": [
        "original_script",
        "faithful_direct_translation",
        "standalone_english_translation",
        "amplified_narrative_translation"
      ],
      "properties": {
        "original_script": {
          "type": "string",
          "minLength": 1,
          "description": "Text in original Hebrew or Greek"
        },
        "faithful_direct_translation": {
          "type": "string",
          "minLength": 1,
          "description": "Precise rendering from original languages"
        },
        "standalone_english_translation": {
          "type": "string",
          "minLength": 1,
          "description": "Optimized for immediate readability"
        },
        "amplified_narrative_translation": {
          "type": "string",
          "minLength": 1,
          "description": "Full English expansion with nuances and grammatical weight"
        }
      }
    },
    "section_2_exegetical_synthesis": {
      "type": "object",
      "required": [
        "literal_primary_filter",
        "prophetic_typology_and_intertextuality",
        "linguistic_mechanics_and_names",
        "literary_devices",
        "numerical_and_gematria_significance",
        "historical_context_and_chronology",
        "socio_political_matrix",
        "geospatial_and_physical_geography",
        "archaeological_confirmation",
        "aggregate_analogia_scriptura"
      ],
      "properties": {
        "literal_primary_filter": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "minItems": 1,
          "description": "Array of literal, historical, and grammatical facts"
        },
        "prophetic_typology_and_intertextuality": {
          "type": "object",
          "required": ["type_shadow", "antitype_fulfillment", "progression_notes"],
          "properties": {
            "type_shadow": {
              "type": "string",
              "description": "Themes through Pentateuch/Psalms/Prophets"
            },
            "antitype_fulfillment": {
              "type": "string",
              "description": "The realization in Christ"
            },
            "progression_notes": {
              "type": "string",
              "description": "Progression from prophetic promise to apostolic realization"
            }
          }
        },
        "linguistic_mechanics_and_names": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["entry", "theological_significance"],
            "properties": {
              "entry": {
                "type": "string",
                "description": "Original script with transliteration and meaning"
              },
              "theological_significance": {
                "type": "string",
                "description": "Etymological unpacking of proper names"
              }
            }
          },
          "description": "Etymology, grammar, and syntax details"
        },
        "literary_devices": {
          "type": "string",
          "description": "Chiasm, parallelism, inclusio, etc."
        },
        "numerical_and_gematria_significance": {
          "type": "string",
          "description": "Thematic weight of numbers"
        },
        "historical_context_and_chronology": {
          "type": "object",
          "required": ["dates", "context"],
          "properties": {
            "dates": {
              "type": "string",
              "minLength": 1,
              "description": "Precise conservative scholarship dates"
            },
            "context": {
              "type": "string",
              "minLength": 1,
              "description": "Cultural, economic, and legal norms"
            }
          }
        },
        "socio_political_matrix": {
          "type": "string",
          "minLength": 1,
          "description": "Roman, Herodian, Tribal pressures and direct impact"
        },
        "geospatial_and_physical_geography": {
          "type": "object",
          "required": [
            "modern_location",
            "coordinates",
            "altitude_m",
            "terrain_climate_characteristics"
          ],
          "properties": {
            "modern_location": {
              "type": "string",
              "minLength": 1,
              "description": "Place name"
            },
            "coordinates": {
              "type": "object",
              "required": ["lat", "long"],
              "properties": {
                "lat": {
                  "type": "number",
                  "minimum": -90,
                  "maximum": 90
                },
                "long": {
                  "type": "number",
                  "minimum": -180,
                  "maximum": 180
                }
              }
            },
            "altitude_m": {
              "type": "number",
              "description": "Altitude in meters"
            },
            "terrain_climate_characteristics": {
              "type": "string",
              "description": "Salient physical/terrain characteristics"
            }
          }
        },
        "archaeological_confirmation": {
          "type": "string",
          "description": "Inscriptions, ruins, coins, or artifacts"
        },
        "aggregate_analogia_scriptura": {
          "type": "string",
          "minLength": 1,
          "description": "Harmonized nuggets with all Scripture references retained in-line"
        }
      }
    },
    "section_3_life_application": {
      "type": "string",
      "minLength": 1,
      "description": "Concise, actionable output focused on doing the Word"
    },
    "interlinear_analysis": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "word_number",
          "greek_word",
          "transliteration",
          "lemma",
          "parsing_code",
          "parsing_expanded",
          "strongs_number",
          "english_gloss",
          "contextual_meaning"
        ],
        "properties": {
          "word_number": {
            "type": "integer",
            "minimum": 1,
            "description": "Sequential position of word in verse"
          },
          "greek_word": {
            "type": "string",
            "minLength": 1,
            "description": "Original Greek or Hebrew word in native script"
          },
          "transliteration": {
            "type": "string",
            "minLength": 1,
            "description": "Romanized pronunciation of the word"
          },
          "lemma": {
            "type": "string",
            "minLength": 1,
            "description": "Dictionary/lexical form of the word"
          },
          "parsing_code": {
            "type": "string",
            "minLength": 1,
            "description": "Abbreviated morphological code (e.g., V-AAP-NSM)"
          },
          "parsing_expanded": {
            "type": "string",
            "minLength": 1,
            "description": "Full morphological description (e.g., Verb, Aorist, Active, Participle, Nominative, Singular, Masculine)"
          },
          "strongs_number": {
            "type": "string",
            "pattern": "^[GH][0-9]+$",
            "description": "Strong's Concordance number (G1234 for Greek, H5678 for Hebrew)"
          },
          "english_gloss": {
            "type": "string",
            "minLength": 1,
            "description": "Basic English translation of the lemma"
          },
          "contextual_meaning": {
            "type": "string",
            "minLength": 1,
            "description": "Meaning specific to this verse's context"
          }
        }
      },
      "description": "Word-by-word interlinear breakdown with morphology and Strong's numbers"
    },
    "geographic_calculations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "from_location",
          "to_location",
          "straight_line_distance_km",
          "ancient_route_distance_km",
          "elevation_change_m",
          "estimated_travel_time_days",
          "uncertainty_notes"
        ],
        "properties": {
          "from_location": {
            "type": "string",
            "minLength": 1,
            "description": "Starting location name"
          },
          "to_location": {
            "type": "string",
            "minLength": 1,
            "description": "Destination location name"
          },
          "straight_line_distance_km": {
            "type": "number",
            "minimum": 0,
            "description": "Direct geodesic distance in kilometers"
          },
          "ancient_route_distance_km": {
            "type": "number",
            "minimum": 0,
            "description": "Estimated distance along historical roads/paths"
          },
          "elevation_change_m": {
            "type": "number",
            "description": "Net elevation change in meters (positive=climb, negative=descent)"
          },
          "estimated_travel_time_days": {
            "type": "object",
            "required": ["on_foot", "by_donkey"],
            "properties": {
              "on_foot": {
                "type": "number",
                "minimum": 0,
                "description": "Estimated days walking"
              },
              "by_donkey": {
                "type": "number",
                "minimum": 0,
                "description": "Estimated days by donkey"
              },
              "by_horse": {
                "type": "number",
                "minimum": 0,
                "description": "Estimated days by horse (if applicable)"
              },
              "by_ship": {
                "type": "number",
                "minimum": 0,
                "description": "Estimated days by sea (if applicable)"
              }
            }
          },
          "uncertainty_notes": {
            "type": "string",
            "minLength": 1,
            "description": "Notes on uncertainty in route/location identification"
          }
        }
      },
      "description": "Calculated distances and travel times between biblical locations"
    },
    "tags": {
      "type": "object",
      "properties": {
        "tier_1_foundational_theology": {
          "type": "object",
          "properties": {
            "attributes_of_god": {"type": "array", "items": {"type": "string"}},
            "trinity": {"type": "array", "items": {"type": "string"}},
            "christology": {"type": "array", "items": {"type": "string"}},
            "holy_spirit": {"type": "array", "items": {"type": "string"}},
            "soteriology": {"type": "array", "items": {"type": "string"}},
            "gospel": {"type": "array", "items": {"type": "string"}},
            "covenant_theology": {"type": "array", "items": {"type": "string"}},
            "biblical_inspiration": {"type": "array", "items": {"type": "string"}},
            "eschatology": {"type": "array", "items": {"type": "string"}},
            "angelology_demonology": {"type": "array", "items": {"type": "string"}},
            "resurrection": {"type": "array", "items": {"type": "string"}},
            "creation_providence": {"type": "array", "items": {"type": "string"}}
          }
        },
        "tier_2_applied_theology": {
          "type": "object",
          "properties": {
            "faith": {"type": "array", "items": {"type": "string"}},
            "repentance": {"type": "array", "items": {"type": "string"}},
            "prayer": {"type": "array", "items": {"type": "string"}},
            "worship": {"type": "array", "items": {"type": "string"}},
            "obedience": {"type": "array", "items": {"type": "string"}},
            "holiness_sanctification": {"type": "array", "items": {"type": "string"}},
            "stewardship": {"type": "array", "items": {"type": "string"}},
            "witness_evangelism": {"type": "array", "items": {"type": "string"}},
            "spiritual_warfare": {"type": "array", "items": {"type": "string"}},
            "spiritual_gifts": {"type": "array", "items": {"type": "string"}},
            "discipleship": {"type": "array", "items": {"type": "string"}},
            "suffering_perseverance": {"type": "array", "items": {"type": "string"}}
          }
        },
        "tier_3_relational_ethics": {
          "type": "object",
          "properties": {
            "love": {"type": "array", "items": {"type": "string"}},
            "forgiveness": {"type": "array", "items": {"type": "string"}},
            "humility": {"type": "array", "items": {"type": "string"}},
            "justice": {"type": "array", "items": {"type": "string"}},
            "marriage_family": {"type": "array", "items": {"type": "string"}},
            "church_community": {"type": "array", "items": {"type": "string"}},
            "leadership_authority": {"type": "array", "items": {"type": "string"}},
            "conflict_resolution": {"type": "array", "items": {"type": "string"}},
            "compassion_mercy": {"type": "array", "items": {"type": "string"}},
            "truthfulness": {"type": "array", "items": {"type": "string"}},
            "sexuality_purity": {"type": "array", "items": {"type": "string"}},
            "wealth_poverty": {"type": "array", "items": {"type": "string"}}
          }
        },
        "tier_4_cultural_historical": {
          "type": "object",
          "properties": {
            "jewish_customs": {"type": "array", "items": {"type": "string"}},
            "roman_occupation": {"type": "array", "items": {"type": "string"}},
            "temple_worship": {"type": "array", "items": {"type": "string"}},
            "synagogue": {"type": "array", "items": {"type": "string"}},
            "festivals_feasts": {"type": "array", "items": {"type": "string"}},
            "pharisees_sadducees": {"type": "array", "items": {"type": "string"}},
            "gentiles": {"type": "array", "items": {"type": "string"}},
            "clean_unclean_laws": {"type": "array", "items": {"type": "string"}},
            "slavery": {"type": "array", "items": {"type": "string"}},
            "agriculture_economy": {"type": "array", "items": {"type": "string"}},
            "travel_trade_routes": {"type": "array", "items": {"type": "string"}},
            "ancient_warfare": {"type": "array", "items": {"type": "string"}}
          }
        },
        "tier_5_literary_prophetic": {
          "type": "object",
          "properties": {
            "parables": {"type": "array", "items": {"type": "string"}},
            "miracles": {"type": "array", "items": {"type": "string"}},
            "prophecy_fulfillment": {"type": "array", "items": {"type": "string"}},
            "typology": {"type": "array", "items": {"type": "string"}},
            "symbolism": {"type": "array", "items": {"type": "string"}},
            "poetry_wisdom": {"type": "array", "items": {"type": "string"}},
            "apocalyptic_literature": {"type": "array", "items": {"type": "string"}},
            "narrative_history": {"type": "array", "items": {"type": "string"}},
            "epistle_teaching": {"type": "array", "items": {"type": "string"}},
            "old_testament_quotation": {"type": "array", "items": {"type": "string"}},
            "wordplay_idiom": {"type": "array", "items": {"type": "string"}},
            "rhetorical_device": {"type": "array", "items": {"type": "string"}}
          }
        }
      },
      "description": "Comprehensive hierarchical tags for categorizing verse content across 60+ subcategories"
    }
  }
}
